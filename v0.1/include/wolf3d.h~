# define WIN fctl->win
# define IMG fctl->img
# define ADDR fctl->addr
# define WIN_X fctl->win_x
# define WIN_Y fctl->win_y
# define BPP fctl->bpp
# define ENDIAN fctl->endian

/*
**	MOVMENT MACROS
*/
# define POS_X wf->pos_x
# define POS_Y wf->pos_y
# define V_X wf->v_x
# define V_Y wf->v_y
# define PLAN_X wf->plan_x
# define PLAN_Y wf->plan_y
# define FRAME wf->frame
# define FRAME_O wf->frame_o

