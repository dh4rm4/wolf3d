{
	double      r;
	double      i;
}               t_complex;

typedef struct	s_wolf
{
	void        *mlx;
	void        *win;
	void        *img;
	char        *addr;
	int         win_x;
	int         win_y;
	int         bpp;
	int         endian;


}				t_wolf;

typedef struct



