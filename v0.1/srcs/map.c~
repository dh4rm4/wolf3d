#include "../include/wolf3d.h"

void	map(t_wolf *wolf)
{
	int	x;
	int	y;

	x = -1;
	while (++x < 24)
	{
		y = -1;
		while (++y < 24)
		{
			if (x == 0 || y == 0 || x == 23 || y == 23)
				MAP[x][y] = 1;
			else
				MAP[x][y] = 0;
		}
	}
	MAP[10][10] = 2;
	MAP[10][11] = 2;
	MAP[11][10] = 2;
	MAP[11][11] = 2;

}
